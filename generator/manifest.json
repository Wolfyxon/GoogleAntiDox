{
    "manifest_version": 3,
    "name": "GoogleAntiDox",
    "description": "Prevents you from accidentally leaking your location when googling during recording, screenshare or making a screenshot.",
    "homepage_url": "https://github.com/Wolfyxon/GoogleAntiDox",
    "author": "Wolfyxon",
    "version": "1.1",
    
    "options_ui": {
        "page": "settings/index.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "@google-anti-dox",
            "strict_min_version": "58.0"
        }
    },

    "permissions": [
        "storage"
    ],

    "content_scripts": [
        {
            "js": [
                "global/settings.js",
                "global/main.js"
            ],
            "css": [
                "global/main.css"
            ],
            "run_at": "document_start",
            "matches": [
                "< See buildManifest.js >"
            ]
        }
    ],

    "host_permissions": [
        "< See buildManifest.js >"
    ]
}